{
  "name": "@cdimitroulas/typescript-scripts",
  "version": "5.0.0",
  "description": "A collection of scripts related to typescript development",
  "repository": {
    "type": "git",
    "url": "https://github.com/cdimitroulas/typescript-scripts.git"
  },
  "main": "lib/",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib/ && tsc",
    "lint": "eslint --ext .js,.ts scripts/ index.ts",
    "prepare": "npm run build",
    "test": "npm run lint && tsc --noEmit"
  },
  "keywords": [
    "typescript",
    "scripts",
    "linting",
    "testing",
    "compiling"
  ],
  "author": "Christos Dimitroulas",
  "license": "MIT",
  "dependencies": {
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^3.0.4",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7",
    "pretty-quick": "^1.11.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/node": "^18.15.11",
    "@types/yargs-parser": "^20.2.0",
    "np": "^7.5.0"
  },
  "bin": "./lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
